<script>
    $(document).ready(function () {
        // Khởi tạo carousel cho brands-slider
        var $brandsCarousel = $('.brands-slider');
        var brandsOptions = $brandsCarousel.data('owl-options');
        $brandsCarousel.owlCarousel(brandsOptions);

        // Khởi tạo carousel cho banners-container
        var $bannersCarousel = $('.banners-container');
        var bannersOptions = $bannersCarousel.data('owl-options');
        $bannersCarousel.owlCarousel(bannersOptions);
    });
</script>
